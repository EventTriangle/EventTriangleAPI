  "AzureAd": {
    "Authority": "https://login.microsoftonline.com/b40a105f-0643-4922-8e60-10fc1abf9c4b/v2.0/",
    "Instance": "https://login.microsoftonline.com",
    "TenantId": "b40a105f-0643-4922-8e60-10fc1abf9c4b",
