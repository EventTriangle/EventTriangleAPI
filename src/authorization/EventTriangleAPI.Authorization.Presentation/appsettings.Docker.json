  "GrpcChannelAddresses": "http://sender-service:81",
  "ReverseProxy": {
    "Routes": {
      "route1" : {
        "ClusterId": "cluster1",
        "Match": {
          "Path": "/sender/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/sender"
          }
        ]
      },
      "route2" : {
        "ClusterId": "cluster2",
        "Match": {
          "Path": "/consumer/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/consumer"
          }
        ]
      }
    },
    "Clusters": {
      "cluster1": {
        "Destinations": {
          "destination1": {
            "Address": "http://sender-service"
          }
        }
      },
      "cluster2": {
        "Destinations": {
          "destination1": {
            "Address": "http://consumer-service"
          }
        }
      }
    }
  }
